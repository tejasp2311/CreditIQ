{
  "testEnvironment": "node",
  "testMatch": ["**/__tests__/**/*.test.js", "**/?(*.)+(spec|test).js"],
  "collectCoverageFrom": [
    "**/*.js",
    "!**/node_modules/**",
    "!**/coverage/**",
    "!**/prisma/**",
    "!**/logs/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "verbose": true,
  "testTimeout": 10000,
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
}
